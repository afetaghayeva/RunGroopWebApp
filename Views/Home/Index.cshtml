@using RunGroopWebApp.ViewModels;
@model HomeViewModel
@{
    ViewData["Title"] = "Home Page";
}

<section class="jumbotron text-center">
    <div class="container">
        <h1 class="jumbotron-heading">RunGroops</h1>
        <p class="lead text-muted">texttextetxttettfvgbhjnkm</p>
        <p>
            <a href="#" class="btn btn-primary my-2">Main call to action</a>
            <a href="#" class="btn btn-secondary my-2">Secondary action</a>
        </p>
    </div>
</section>
<div class="album py-5 bg-light">
    <div class="container">
        <div class="row">
            <h1 class="fm-light">Running Clubs near @Model.City, @Model.State</h1>
            @if (Model.Clubs.Count() == 0)
            {
                    <h1 class="fm-light">There is no club in your area<a asp-asp-area="" asp-controller="Account" asp-action="Login">
                        Login</a> and Create one</h1>
            }
            else
            {
                @foreach (var club in Model.Clubs)
                {
                    <div class="col-md-4">
                        <div class="card mb-4 box-shadow">
                         <img class="card-img-top" src=@club.Image width="100%" height="225" alt="Card image cap">
                            <div class="card-body">
                                <p class="card-text">@club.Title</p>
                                <p class="card-text">@club.Description</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                    <a asp-controller="club" asp-action="Detail" asp-route-id="@club.Id" class="btn btn-sm btn-outline-secondary">View</a>
                                    </div>
                                    <small class="text-muted">9 mins</small>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>
